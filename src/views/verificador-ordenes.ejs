<!-- MODAL VIEW PIEZA -->
<div class="modal fade" id="modal_view_pieza" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">[# PARTE]</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="card-header pt-1">
          <ul class="nav nav-tabs card-header-tabs" role="tablist">
            <li class="nav-item flex-grow-1" role="presentation">
              <button
                type="button"
                class="nav-link active"
                role="tab"
                data-bs-toggle="tab"
                data-bs-target="#navs_info"
                aria-controls="navs_info"
                aria-selected="true">
                <i class="ti ti-info-circle ti-xs me-1"></i>
                Información
              </button>
            </li>
            <li class="nav-item flex-grow-1" role="presentation">
              <button
                type="button"
                class="nav-link"
                role="tab"
                data-bs-toggle="tab"
                data-bs-target="#navs_img"
                aria-controls="navs_img"
                aria-selected="false"
                tabindex="-1">
                <i class="ti ti-photo ti-xs me-1"></i>
                Imágenes
              </button>
            </li>
            <li class="nav-item flex-grow-1" role="presentation">
              <button
                type="button"
                class="nav-link"
                role="tab"
                data-bs-toggle="tab"
                data-bs-target="#navs_files"
                aria-controls="navs_files"
                aria-selected="false"
                tabindex="-1">
                <i class="ti ti-paperclip ti-xs me-1"></i>
                Archivos
              </button>
            </li>
          </ul>
        </div>
        <div class="card-body">
          <div class="tab-content p-0 pt-3">
            <div class="tab-pane fade show active" id="navs_info" role="tabpanel">
              Información de la pieza [no. parte, descripcion, codigo, revisión
            </div>
            <div class="tab-pane fade" id="navs_img" role="tabpanel">
              Imágenes de la pieza [lista y con clic ver imágenes]
            </div>
            <div class="tab-pane fade" id="navs_files" role="tabpanel">Archivos [lista para descarga]</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

