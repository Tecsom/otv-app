  </a>

  <a class="bg-label-primary rounded card square-container cursor-pointer" href="/verificador/embarques">
    <div class="square-content d-flex align-items-center justify-content-center">
      <div class="text-center">
        <img style="width: 50%" src="../../public/assets/img/otv-assets/truck3d.png" />
        <h3 class="mt-2">Embarques</h3>
      </div>
    </div>
  </a>
</div>
<!--! MODAL ÓDENES DE COMPRA -->
<div class="modal fade" id="oc_modal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-md" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel1">Órdenes de compra</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-12">
            <div class="d-flex align-items-center me-3 me-lg-0 gap-2">
              <div class="flex-grow-1 input-group input-group-merge">
                <span class="input-group-text" id="basic-addon-search31"><i class="ti ti-search"></i></span>
                <input
                  type="text"
                  id="search-report-filter"
                  class="form-control chat-search-input"
                  placeholder="Buscar orden de compra"
                  aria-label="Buscar orden de compra"
                  aria-describedby="basic-addon-search31" />
              </div>
              <button
                type="button"
                class="btn btn-icon btn-label-primary"
                data-bs-toggle="collapse"
                data-bs-target="#collapse-filters"
                aria-expanded="false"
                aria-controls="collapse-filters">
                <span class="ti ti-filter"></span>
              </button>
            </div>
            <div class="border-1 border-top mt-2 pt-2 collapse" id="collapse-filters">
              <div class="row g-3">
                <div class="col-md-12">
                  <label for="range_filter" class="form-label">Estado de la orden</label>

                  <div class="form-check mt-2">
                    <input
                      class="form-check-input filter-checkbox"
                      type="checkbox"
                      value="proceso"
                      id="check_proceso"
                      checked />
                    <label class="form-check-label" for="check_proceso">Proceso</label>
                  </div>
                  <div class="form-check mt-2">
                    <input
                      class="form-check-input filter-checkbox"
                      type="checkbox"
                      value="embarque"
                      id="check_embarque"
                      checked />
                    <label class="form-check-label" for="check_embarque">Embarque</label>
                  </div>
                  <div class="form-check mt-2">
                    <input
                      class="form-check-input filter-checkbox"
                      type="checkbox"
                      value="finalizada"
                      id="check_completada" />
                    <label class="form-check-label" for="check_completada">Completada</label>
                  </div>
                </div>

                <div class="col-md-12">
                  <div style="text-align: right" class="text-right cursor-pointer">
                    <span class="text-muted" id="remove-filters-btn"><small>Eliminar filtros</small></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <ul class="nav nav-tabs card-header-tabs" role="tablist">
          <li class="nav-item" role="presentation">
            <button
              type="button"
              class="nav-link active"
              role="tab"
              data-bs-toggle="tab"
              data-bs-target="#tab_folio"
              aria-controls="tab_folio"
              id="tab_folio_btn"
              aria-selected="true">
              <i class="ti ti-123 ti-xs me-1"></i>
              Folio
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button
              type="button"
              class="nav-link"
              role="tab"
              data-bs-toggle="tab"
              id="tab_dia_btn"
              data-bs-target="#tab_dia"
              aria-controls="tab_dia"
              aria-selected="false"
              tabindex="-1">
              <i class="ti ti-calendar ti-xs me-1"></i>
              Día
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button
              type="button"
              class="nav-link"
              role="tab"
              data-bs-toggle="tab"
              id="tab_semana_btn"
              data-bs-target="#tab_semana"
              aria-controls="tab_semana"
              aria-selected="false"
              tabindex="-1">
              <i class="ti ti-arrows-exchange ti-xs me-1"></i>
              Semana
            </button>
          </li>
        </ul>
        <div class="tab-content p-lg-0">
          <div class="tab-pane fade show active" id="tab_folio" role="tabpanel"></div>
          <div class="tab-pane fade pt-3" id="tab_dia" role="tabpanel">
            <div class="row">
              <div class="col-md-12">
                <label for="day_fecha_entrega" class="form-label">Día de entrega</label>
                <input
                  class="form-control datetimepicker flatpickr-input"
                  id="day_fecha_entrega"
                  type="text"
                  placeholder="Selecciona un rango de fecha"
                  readonly="readonly" />
              </div>
            </div>
          </div>
          <div class="tab-pane fade pt-3" id="tab_semana" role="tabpanel">
            <div class="row">
              <div class="col-md-12">
                <label for="week_fecha_entrega" class="form-label">Semana de entrega</label>
                <input
                  class="form-control datetimepicker flatpickr-input"
                  id="week_fecha_entrega"
                  type="text"
                  placeholder="Selecciona un rango de fecha"
                  readonly="readonly" />
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <!-- <div class="col-12">
            <hr class="mb-0" />
          </div> -->
          <div id="ordenes_compra_container" class="sidebar-body" style="overflow-y: scroll"></div>
        </div>
      </div>
    </div>
  </div>

  <script src="/public/scripts/verificador/verificador.js" type="module"></script>
</div>
