<style>
  .square-container {
    position: relative;
    width: 35%; /* Set the width as desired */
  }
  .square-container:before {
    content: '';
    display: block;
    padding-top: 100%; /* 1:1 Aspect Ratio (height = width) */
  }
  .square-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .image-selector {
    width: 50%;
    height: auto;
  }

  .order_container_child:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }
</style>

<div class="d-flex align-items-center h-100 flex-wrap justify-content-center gap-5">
  <a class="bg-label-primary rounded card square-container cursor-pointer" href="#" id="oc_btn">
    <div class="square-content d-flex align-items-center justify-content-center">
      <div class="text-center">
        <img style="width: 50%" src="../../public/assets/img/otv-assets/3dinvoice.png" />
        <h3 class="mt-2">Órdenes de compra</h3>
      </div>
