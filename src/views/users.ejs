<style>
  #usersTable .btn {
    box-shadow: none !important;
  }

  #usersTable td {
    cursor: pointer !important;
  }

  .pac-container {
    background-color: #fff;
    z-index: 20;
    position: fixed;
    float: left;
  }

  .modal {
    z-index: 20;
  }

  .modal-backdrop {
    z-index: 10;
  }
</style>
<div class="container-xxl flex-grow-1 container-p-y">
  <div class="d-flex justify-content-between align-items-center pb-2 border-bottom">
    <h4 class="mb-0">Usuarios</h4>
    <button
      id="newUserBtn"
      type="button"
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#createUserModal">
      <span class="tf-icons ti-xs ti ti-plus me-1"> </span>Nuevo usuario
    </button>
  </div>

  <!-- Clientes List Table -->
  <div class="card mt-3">
    <div class="card-header">
      <div class="row">
        <div class="col-md-12">
          <div class="d-flex justify-content-between align-items-center row gap-3 gap-md-0">
            <div class="col-md-4">
              <input class="form-control" type="search" placeholder="Buscar usuario..." id="searchUserInput" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="card-datatable table-responsive border-top">
      <!--TABLE HERE-->
      <table id="usersTable" class="table table-striped w-100 card-table table-hover table-sm"></table>
    </div>
  </div>
</div>

<!--! Create user modal -->
<div class="modal fade modal_cliente" id="createUserModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel1">Nuevo usuario</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="createUserForm" class="row g-3">
          <div class="col-md-12">
            <label for="createUserName" class="form-label required">Nombre</label>
            <input type="text" id="createUserName" name="name" class="form-control" />
          </div>
          <div class="col-md-12">
            <label for="createUserEmail" class="form-label required">Correo electrónico</label>
            <input type="email" id="createUserEmail" name="email" class="form-control" />
          </div>
          <div class="col-md-12">
            <label for="createUserRole" class="form-label required">Rol</label>
            <select type="text" id="createUserRole" name="rol" class="form-select">
              <option value="admin">Administrador</option>
              <option value="verificador">Verificador</option>
              <option value="verificador_orders">Verificador de ODC</option>
              <option value="verificador_shipments">Verificador de embarques</option>
            </select>
          </div>
          <div class="col-md-12" id="containerVerificadorPass">
            <label for="createUserVericadorPass" class="form-label required">Clave verificador</label>
            <input type="text" id="createUserVericadorPass" name="verificador_pass" class="form-control" />
          </div>
          <div class="col-md-12">
            <label for="createUserPassword" class="form-label required">Contraseña</label>
            <input type="text" id="createUserPassword" name="password" class="form-control" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button id="confirmNuewUser" type="submit" form="createUserForm" class="btn btn-success">Crear cliente</button>
      </div>
    </div>
  </div>
</div>

<!--! Edit User Modal -->
<div class="modal fade modal_cliente" id="editUserModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editUserLabel"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form id="editUserForm" class="row g-3">
          <input type="hidden" id="editUserId" name="id" />
          <div class="col-md-12">
            <label for="editUserName" class="form-label required">Nombre</label>
            <input type="text" id="editUserName" name="name" class="form-control" />
          </div>
          <div class="col-md-12">
            <label for="editUserRole" class="form-label required">Rol</label>
            <select type="text" id="editUserRole" name="rol" class="form-select">
              <option value="admin">Administrador</option>
              <option value="verificador">Verificador</option>
              <option value="verificador_orders">Verificador de ODC</option>
              <option value="verificador_shipments">Verificador de embarques</option>
            </select>
          </div>
          <div class="col-md-12" id="containerVerificadorPassEdit">
            <label for="editUserVericadorPass" class="form-label required">Clave verificador</label>
            <input type="text" id="editUserVericadorPass" name="verificador_pass" class="form-control" />
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button id="confirmNuewUser" type="submit" form="editUserForm" class="btn btn-success">Guardar</button>
      </div>
    </div>
  </div>
</div>
<script src="/public/scripts/users/main.js" type="module"></script>
