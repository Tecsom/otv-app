{
  "name": "OTV",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/src/app.js",
  "type": "commonjs",
  "license": "Commercial",
  "scripts": {
    "dev": "rm -rf dist && tsc && tsc-alias && rm -rf dist/public && cp -r public dist/public && cp -r src/views dist/src/views && cp -r src/layouts dist/src/layouts && electron dist/src/app.js",
    "local": "NODE_ENV=test tsx watch src/app.ts ",
    "dist": "electron-builder",
    "pack": " tsc && tsc-alias  && xcopy /s /e public dist\\public && xcopy /s /e src\\views dist\\src\\views && xcopy /s /e src\\layouts dist\\src\\layouts && electron dist\\src\\app.js"
  },
  "build": {
    "appId": "com.tecsom.otvapp",
    "productName": "OTV APP",
    "win": {
      "target": "nsis",
      "icon": "./dist/public/assets/logos/LOGO-Negro256.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "./dist/public/assets/logos/LOGO-Negro.ico"
    },
    "directories": {
      "output": "release"
    },
    "extraResources": "node_modules",
    "files": [
      "./dist/**/*",
      "./package.json"
    ]
  },
  "author": "Tecsom",
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@serialport/bindings-interface": "^1.2.2",
    "@supabase/supabase-js": "^2.42.0",
    "@types/serialport": "^8.0.5",
    "base64-arraybuffer": "^1.0.2",
    "body-parse": "^0.1.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "express-ejs-layouts": "^2.5.1",
    "jsonwebtoken": "^9.0.2",
    "node-persist": "^4.0.1",
    "pdfmake": "~0.2.9",
    "serialport": "^12.0.0",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^4.17.21",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node-persist": "^3.1.8",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "typescript": "^5.4.5"
  }
}